 def skipRemainingStages = true
 
 pipeline {
    agent any
    parameters {
        choice(
            choices: ['all' , 'C', 'Python', 'Bash'],
            description: '',
            name: 'LANGUAGE')
    }
    
   stages {  
       stage ('SCR') {
            steps { script {
                    skipRemainingStages = false
                }
      }
}
   
        stage ('ALL Language') {
            when { expression { return params.LANGUAGE == 'all'} }
            steps { 
              echo "Hello, ALL LANGUAGE"
            }
        }
                  
        stage ('C') {
            when { expression { return params.LANGUAGE == 'C' || skipRemainingStages} }
            steps { script {
                    skipRemainingStages = true
                }
                echo "Hello, LANGUAGE, C" }
        }
        
        stage ('Python') {
            when { expression { params.LANGUAGE == 'Python' || skipRemainingStages} }
            steps { script {
                    skipRemainingStages = true
                }
            echo "Hello, LANGUAGE, Python" }
        }
        
        stage ('Bash') {
            when { expression { params.LANGUAGE == 'Bash' || skipRemainingStages} }
            steps { echo "Hello, LANGUAGE, Bash"
            sh '''
            ${WORKSPACE}/scripts/23_water.sh $USER
            '''
            script {
                    skipRemainingStages = true
                }
 }

        }
    }
}
