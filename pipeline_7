 def skipRemainingStages = false
 
 pipeline {
    agent any
    parameters {
        choice(
            choices: ['all' , 'C', 'Python', 'Bash'],
            description: '',
            name: 'LANGUAGE')
    }
    
   stages {  
       stage ('SCR') {
            steps { 
                script {
                    skipRemainingStages = true
                }
      }
}
   
        stage ('ALL Language') {
            when { expression { return params.LANGUAGE == 'all' || !skipRemainingStages} }
            steps { echo "Hello, ALL LANGUAGE" }
        }
                  
        stage ('C') {
            when { expression { return params.LANGUAGE == 'C' } }
            steps { echo "Hello, LANGUAGE, C" }
        }
        stage ('Python') {
            when { expression { params.LANGUAGE == 'Python' } }
            steps { echo "Hello, LANGUAGE, Python" }
        }
        
        stage ('Bash') {
            when { expression { params.LANGUAGE == 'Bash' } }
            steps { echo "Hello, LANGUAGE, Bash" }
        }
    }
}
