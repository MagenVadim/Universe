pipeline {
    agent any
    parameters {
        choice(
            choices: ['all' , 'C', 'Python', 'Bash'],
            description: '',
            name: 'LANGUAGE')
    }

    stages {
        stage ('Speak') {
            when {
                // Only say hello if a "greeting" is requested
                expression { params.LANGUAGE == 'all' }
            }
            steps {
                echo "Hello, ALL LANGUAGE!"
            }
        }
    }
}
