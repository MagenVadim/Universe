 pipeline {
    agent any
    parameters {
        choice(
            choices: ['all' , 'C', 'Python', 'Bash'],
            description: '',
            name: 'LANGUAGE')
    }
    
    environment {
       varC = "echo "Hello, LANGUAGE, CCCCC""
       varPython = "{ echo "Hello, LANGUAGE, Python" }"
       varBash = "{ echo "Hello, LANGUAGE, Bash" }"
    }

    stages {
        stage ('ALL Language') {
            when { expression { params.LANGUAGE == 'all' } }
            steps { ${varC} }
            steps ${varPython}
            steps ${varBash}
        }
        stage ('C') {
            when { expression { params.LANGUAGE == 'C' } }
            steps ${varC}
        }
        stage ('Python') {
            when { expression { params.LANGUAGE == 'Python' } }
            steps ${varPython}
        }
        stage ('Bash') {
            when { expression { params.LANGUAGE == 'Bash' } }
            steps ${varBash}
        }
    }
}
